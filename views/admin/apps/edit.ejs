<div class="container my-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">Chỉnh sửa ứng dụng</h4>
        </div>
        <div class="card-body">
          <form action="/admin/apps/<%= app.id %>" method="POST">
            <input type="hidden" name="_method" value="PUT">
            
            <div class="mb-3">
              <label for="name" class="form-label">Tên ứng dụng <span class="text-danger">*</span></label>
              <input type="text" class="form-control" id="name" name="name" value="<%= app.name %>" required>
            </div>
            
            <div class="mb-3">
              <label for="description" class="form-label">Mô tả</label>
              <textarea class="form-control" id="description" name="description" rows="3"><%= app.description || '' %></textarea>
            </div>
            
            <div class="d-flex justify-content-between">
              <a href="/admin/apps" class="btn btn-secondary">Hủy</a>
              <button type="submit" class="btn btn-primary">Cập nhật</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div> 